<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="comp3350.team10">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MealPlanner">

        <activity
            android:name=".presentation.AddMeals"
            android:exported="false" />
        <activity

            android:name=".presentation.AddRecipe"
            android:exported="false"
            android:parentActivityName=".presentation.ActivityRecipeBook"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".presentation.ActivityRecipeBook" />
        <activity
            android:name=".presentation.ActivityViewEdible"
            android:exported="false"
            android:label="@string/title_activity_view_edible"
            android:launchMode="singleTask"
            android:parentActivityName=".presentation.MainActivity"
            android:theme="@style/Theme.MealPlanner.NoActionBar" />
        <activity
            android:name=".presentation.ActivityMealDiary"
            android:launchMode="singleTop"
            android:parentActivityName=".presentation.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.MainActivity" />
    </application>

</manifest>