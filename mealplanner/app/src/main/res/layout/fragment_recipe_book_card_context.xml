<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_container"
    android:layout_width="280dp"
    android:layout_height="280dp"
    android:minWidth="300dp"
    android:minHeight="300dp"
    tools:context=".presentation.FragmentRecipeBookCard">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:maxWidth="140dp"
        android:minWidth="140dp"
        android:minHeight="200dp"
        app:cardBackgroundColor="?colorSecondaryVariant"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_marginBottom="40dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:layout_constraintBottom_toBottomOf="parent">

                <Button
                    android:id="@+id/addToPlannerBtn2"
                    android:layout_width="260dp"
                    android:layout_height="97dp"
                    android:layout_weight="1"
                    android:backgroundTint="?colorSecondary" />

                <Button
                    android:id="@+id/viewBtn2"
                    android:layout_width="97dp"
                    android:layout_height="97dp"
                    android:layout_weight="1"
                    android:backgroundTint="?colorSecondary"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_marginBottom="40dp"
                android:elevation="10dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/addIcon"
                    android:layout_width="147dp"
                    android:layout_height="88dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:elevation="10dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    app:srcCompat="@drawable/baseline_add_circle_outline_black_36"
                    app:tint="#138000" />

                <ImageView
                    android:id="@+id/viewIcon"
                    android:layout_width="116dp"
                    android:layout_height="88dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:elevation="10dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:src="@android:drawable/ic_menu_view"
                    android:visibility="gone"
                    app:srcCompat="@drawable/baseline_visibility_black_48"
                    app:tint="#000000" />
            </LinearLayout>

            <Button
                android:id="@+id/btnBackRecipe"
                android:layout_width="97dp"
                android:layout_height="97dp"
                android:layout_marginEnd="86dp"
                android:layout_marginBottom="146dp"
                android:backgroundTint="?colorSecondary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/backIcon"
                android:layout_width="90dp"
                android:layout_height="68dp"
                android:layout_marginStart="80dp"
                android:background="#00FFFFFF"
                android:elevation="10dp"
                android:src="@drawable/baseline_arrow_back_black_48"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.159" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>